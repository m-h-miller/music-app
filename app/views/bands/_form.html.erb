<% method = band.persisted? ? "PATCH" : "POST" %>
<% button_text = band.persisted? ? "Edit Band" : "Create Band" %>
<% action_url = band.persisted? ? band_url(band) : bands_url %>

<form action= "<%= action_url %>" method="POST" >
  <%= auth_token %>

  <input type="hidden" name="_method" value="<%= method %>"

  <label for="band_name">Band Name</label><br>
  <input type="text" name="band[name]" id="band_name" value="<%=@band.name %>" >

  <br><br>

  <input type="submit" value="<%= button_text %>" >
</form>
