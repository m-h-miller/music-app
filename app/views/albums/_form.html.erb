<% method = album.persisted? ? "PATCH" : "POST" %>
<% button_text = album.persisted? ? "Edit album" : "Create album" %>
<% action_url = album.persisted? ? album_url(album) : albums_url %>

<form action= "<%= action_url %>" method="POST" >
  <%= auth_token %>

  <input type="hidden" name="_method" value="<%= method %>"

  <label for="album_title">Album Name</label><br>
  <input type="text" name="album[title]" id="album_title" value="<%=@album.title %>" >

  <br><br>

  <input type="radio" name="album[album_type]" id="album_type_studio" value="true" "checked" >
  <label for="album_type_studio">Studio</label>

  <input type="radio" name="album[album_type]" id="album_type_live" value="false" >
  <label for="album_type_live">Live</label>

  <br><br>

  <label for="album_band">Select performing artist:</label>
    <br>
    <!-- dropdown -->
  <select name="album[band_id]" id="album_band">
    <option></option>

    <% @all_bands.each do |band| %>

      <option value="<%=band.id%>" <%= album.band_id == band.id ? "selected" : "" %> >
        <%=band.name%>
      </option>

    <% end %>
  </select>

  <br><br>
  <input type="submit" value="<%= button_text %>" >
</form>
